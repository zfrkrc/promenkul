version: '3'

services:
  webserver:
    image: nginx
    volumes:
      - ./nginx:/usr/share/nginx/html:ro
      - ./conf/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./conf/nginx.conf:/etc/nginx/conf.d/default.conf
      - ./certbot/www/certs.crt:/etc/ssl/certs.crt:ro
      - ./certbot/www/private.key:/etc/ssl/private.key:ro
     
    ports:
      - 80:80
      - 443:443